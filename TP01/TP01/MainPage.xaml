<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP01.MainPage"
             BackgroundColor="Black">

    <StackLayout Padding="10">
        <Label FontSize="Title" TextColor="White" Text="Aplicação Teste " HorizontalOptions="Center"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <Label FontSize="Large" Grid.Row="2" TextColor="White" Text="ID"/>
            <Entry BackgroundColor="White" Grid.Row="2" Grid.Column="1" x:Name="id"/>
            <Label FontSize="Large" Grid.Row="3" TextColor="White" Text="Pass"/>
            <Entry BackgroundColor="White" Grid.Column="1" Grid.Row="3" x:Name="password"/>
        </Grid>
        <StackLayout Margin="20,100,20,20">
        <Button BackgroundColor="Gray" TextColor="Maroon" Text="OK" Clicked="okClick"/>
            <Button BackgroundColor="Gray" TextColor="Maroon" Text="Limpar" Clicked="limparClick"/>
            <Button BackgroundColor="Gray" TextColor="Maroon" Text="Creditos" Clicked="creditosClick"/>
        </StackLayout>

    </StackLayout>

</ContentPage>
